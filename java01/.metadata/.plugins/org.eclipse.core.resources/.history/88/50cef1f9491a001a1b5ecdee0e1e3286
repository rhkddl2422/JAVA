package day06;

import java.util.Scanner;

public class account {

	private String name;
	private String number;
	private int money;
	
	Scanner scammer = new scanner;
	
	public int input ( money) // 메소드의 선언부
	{
	   this.money +=money;	
		 return;
		
		
		
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public String getNumber() {
		return number;
	}
	public void setNumber(String number) {
		this.number = number;
	}
	public int getMoney() {
		return money;
	}
	public void setMoney(int money) {
		this.money = money;
	}
	public Scanner getScammer() {
		return scammer;
	}
	public void setScammer(Scanner scammer) {
		this.scammer = scammer;
	}
	
	
	
	
	
	
	 public int output (output money)
	{
		 if(this.money>=money)
		 {
			this.money-=money;
			
			return money;
		 }
		 else {
		 return;
		 
    }
	}
	

	public void print(){
	
		System.out.printf("[%d:%s] 잔고:%d)%n",number,name,money);
		
		return;
	
	}
	
	public static void transfer(account from , account to, int money ) {
		System.out.println("계좌이체");
		System.out.println(for.number+"->"+to.number);
		to.input(from.output(money));
		
	}
	}
	
}